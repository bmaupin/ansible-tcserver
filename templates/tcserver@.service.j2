[Unit]
Description=tc Server instance (%i)
After=network.target

[Service]
Type=forking

WorkingDirectory={{ tcserver_instance_base }}
ExecStart={{ tcserver_install_base }}/tcruntime-ctl.sh %i start
ExecStop={{ tcserver_install_base }}/tcruntime-ctl.sh %i stop

User={{ tcserver_user }}
Group={{ tcserver_group }}

KillMode=none

SuccessExitStatus=1 143

[Install]
WantedBy=multi-user.target
